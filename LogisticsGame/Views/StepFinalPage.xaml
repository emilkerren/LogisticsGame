<UserControl x:Class="LogisticsGame.Views.StepFinalPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogisticsGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Here are your final stats" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold"></TextBlock>
            <TextBlock x:Name="info" HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="12" Text="user info" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="14" Text="{Binding UserStats}" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</UserControl>
