<UserControl x:Class="LogisticsGame.Views.StepOnePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:model="clr-namespace:LogisticsGame.Models"
      xmlns:local="clr-namespace:LogisticsGame.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <StackPanel>
            <TextBlock Text="Choose your Corporate Culture" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" />
            <TextBlock x:Name="info" HorizontalAlignment="Left" TextWrapping="Wrap" Text="user info" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding UserStats}" VerticalAlignment="Top" Margin="0,0,0,20"/>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <StackPanel>
                    <ToggleButton x:Name="BtnBureaucracy" Content="Byråkratiskt" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="89" Command="{Binding AddBureacracyPoints}" IsEnabled="{Binding ToogleBoolBureaucracy}" />
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="-1 envirement" VerticalAlignment="Top"></TextBlock>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="-1 safety" VerticalAlignment="Top"></TextBlock>

                </StackPanel>
                <StackPanel>
                    <ToggleButton x:Name="BtnDecentralized" Content="Decentraliserat" HorizontalAlignment="Left" VerticalAlignment="Top" Width="95" Command="{Binding AddDecentralizedPoints}" IsEnabled="{Binding ToogleBoolDecentralized}"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="+price" VerticalAlignment="Top"></TextBlock>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="+safety" VerticalAlignment="Top"></TextBlock>
                </StackPanel>
            </StackPanel>
            
        </StackPanel>
        <Button x:Name="BtnNext" Content="Next" HorizontalAlignment="Center" VerticalAlignment="Center" Width="95" Command="{Binding NextWindow}" Margin="0,20,0,0"/>
    </Grid>
</UserControl>
